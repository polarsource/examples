---
import ProductsGrid from '@/components/ProductsGrid.astro'
import Layout from '@/layouts/Layout.astro'
import { polar } from '@/lib/polar'

const products = await polar.products.list({ isArchived: false })
const items = products?.result?.items ?? []
---

<Layout title="Polar with Astro">
  <ProductsGrid products={items} />
</Layout>
